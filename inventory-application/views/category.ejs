<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= category.category_name %> | MUSIC STORE</title>
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <div class="container">
      <%- include("navbar") %>
      <h1><%= category.category_name %></h1>
      <h2>Actions</h2>
      <ul>
        <li>
          <a href="/category/<%= category.category_id %>/update">Update</a>
        </li>
        <li>
          <a href="/category/<%= category.category_id %>/delete">Delete</a>
        </li>
      </ul>
      <h2>Description</h2>
      <p><%= category.category_description %></p>
      <h2>Items (<%= item_list.length %>)</h2>
      <% if (item_list.length > 0) { %>
        <ul>
          <% item_list.forEach((item) => { %>
            <li>
              <a href="/item/<%=item.id%>">
                <%= item.brand_name + " | " + item.name %>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No items for now...</p>
      <% } %>
    </div>
  </body>
</html>
