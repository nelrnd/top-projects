generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  files    File[]
}

model File {
  id      Int      @id @default(autoincrement())
  name    String
  type    String   @db.VarChar(25)
  size    Int
  path    String
  user    User     @relation(fields: [userId], references: [id])
  userId  Int
  addedAt DateTime @default(now())
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String   @db.Text
  expiresAt DateTime
}
