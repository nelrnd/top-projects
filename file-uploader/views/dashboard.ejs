<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> | FileUploader</title>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome back <%= currentUser.name %></p>

    <p><a href="/file/upload">Upload a file</a></p>
    <p><a href="/logout">Log out</a></p>

    <ul>
      <% locals.files.map((file) => { %>
        <li><a href="/file/<%= file.id %>/download"><%= file.name %></a></li>
      <% }) %>
    </ul>
  </body>
</html>
